{
	"name": "8bit_emulator",
	"productName": "8bitEmulator",
	"version": "1.0.0",
	"description": "",
	"main": "app.js",
	"scripts": {
		"test": "TS_NODE_PROJECT='./tsconfig.test.json' nyc --cache --reporter=html --reporter=text-summary mocha -r ts-node/register -R nyan ./src/**/**/__tests__/*.test.ts",
		"build:app": "webpack --mode=production --config ./webpack.app.config.js",
		"build:preload": "webpack --mode=production --config ./webpack.preload.config.js",
		"build:ui": "webpack --mode=production --config ./webpack.client.config.js",
		"build:all": "npm-run-all --parallel build:ui build:preload build:app",
		"pack:win": "node package.win.js",
		"pack:mac": "node package.mac.js",
		"prepackage:win": "npm run package:bundle",
		"package:win": "npm run pack:win",
		"postpackage:win": "npm run clean",
		"prepackage:mac": "npm run package:bundle",
		"package:mac": "npm run pack:mac",
		"postpackage:mac": "npm run clean",
		"prepackage:all": "npm test && npm run package:bundle",
		"package:all": "npm-run-all --parallel pack:*",
		"postpackage:all": "npm run clean",
		"package:bundle": "npm run clean && tsc && npm run build:all && rm -rf tmp && cp templates/package.json ./dist",
		"clean": "rm -rf dist && rm -rf tmp",
		"start": "electron dist/app.js"
	},
	"author": "abe.codes",
	"license": "UNLICENSE",
	"devDependencies": {
		"@types/chai": "^4.2.15",
		"@types/chai-arrays": "^2.0.0",
		"@types/electron": "^1.6.10",
		"@types/mocha": "^8.2.1",
		"@types/node": "^14.14.32",
		"@types/react": "^17.0.3",
		"chai": "^4.3.3",
		"chai-arrays": "^2.2.0",
		"css-loader": "^5.1.1",
		"electron": "^12.0.0",
		"electron-packager": "^15.2.0",
		"html-webpack-plugin": "^5.3.0",
		"mini-css-extract-plugin": "^1.3.9",
		"mocha": "^8.3.1",
		"npm-run-all": "^4.1.5",
		"nyc": "^15.1.0",
		"sass": "^1.32.8",
		"sass-loader": "^11.0.1",
		"style-loader": "^2.0.0",
		"terser-webpack-plugin": "^5.1.1",
		"ts-loader": "^8.0.17",
		"ts-node": "^9.1.1",
		"webpack": "^5.24.4",
		"webpack-cli": "^4.5.0"
	},
	"dependencies": {
		"nes.css": "^2.3.0",
		"preact": "^10.5.12"
	}
}
